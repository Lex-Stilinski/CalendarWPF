<Page x:Class="calendar.AlcoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:calendar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="AlcoPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Что  вы  сегодня  пили?" FontFamily="FZShuTi" FontSize="16" VerticalAlignment="Center" Margin="5"/>
        <ListBox x:Name="AlcoList" Grid.Row="1" Margin="5"/>
        <Button Background="#FF207B7B" Grid.Row="2" Margin="5" Content="Сохранить  и  выйти" BorderBrush="#FF207B7B" FontFamily="FZShuTi" FontSize="16" />
    </Grid>
</Page>
